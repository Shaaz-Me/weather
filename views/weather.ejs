<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/headerlinks.ejs') %>
</head>

<body>
    <%- include('./partials/navbar.ejs') %>

        <!-- main header -->
        <div class="container-fluid main_header">
            <div class="row">
                <div class="col-md-10 col-12 mx-auto">
                    <div class="main_content">
                        <form class="temp_form" id="form_input">
                            <input name="city" type="text" id="cityName" autocomplete="off" placeholder="Enter your city name">
                            <input type="submit" value="search" id="submitBtn">
                        </form>
                    </div>
                    <div class="tempInformation detail_box">
                        <div class="top_layer">
                            <p id="day">Day</p>
                            <p id="today_date">Date</p>
                        </div>
                        <div class="main_layer">
                            <p id="city_name">Get Output Here</p>
                            <div class="middle_layer data_hide" id="data_hide">
                                <p><span id="temp">0</span> <sup>&deg;</sup>C</p>
                                <p><img  id="temp_status" src="" alt="3D HTML" width="100%" height="52px"></img></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- footer code  -->
        <%- include('./partials/footer.ejs') %>
        <script src="/js/weatherSection.js"></script>
</body>

</html>